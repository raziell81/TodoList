

@model List<TodoList.Models.TodoItem>


<h2>Lista de Tarefas</h2>

<a href="@Url.Action("Create")">Adicionar nova tarefa</a>

<button onclick="window.print()">Imprimir Lista</button>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Descrição</th>          
            <th class="col-acoes"> Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td class=" col-acoes"></td>
               
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })">Editar</a>
                </td>
                <td>
                   
                    <a href="@Url.Action("Remove", new { id = item.Id })">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
